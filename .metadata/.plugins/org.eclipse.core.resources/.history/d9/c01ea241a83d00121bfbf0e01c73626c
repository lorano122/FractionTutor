package mathClasses;

import java.util.Random;

public class MasterMath {
	private int ans=-1;
	private Random r;
	private int first=-1,second=-1;
	private int denom;
	private String equation;
	
	public MasterMath(int denom)
	{
		this.denom = denom;
		r = new Random();
		createEquation();
	}
	
	public void createEquation()
	{
		int temp1 = ans;
		first = (int) (r.nextDouble()*(denom+1));
		if(first == 0 && second == 0)
			first = (int) (r.nextDouble()*(denom+1));
		while((first + second) > denom)
		{
			if(first > second)
				first = (int) (r.nextDouble()*(denom+1));
			else if(second > first)
				second = (int) (r.nextDouble()*(denom+1));
			else
				second = (int) (r.nextDouble()*(denom+1));
		}
		while(ans == first+second)
			createEquation();
		equation = " "+first+"/"+denom  + " + " + second +"/"+denom;
		ans = first+second;
	}
	
	public String getEquation()
	{
		return equation;
	}

	public int getAnswerNum()
	{
		return ans;
	}
	
	public String getAnswerString()
	{
		return " "+ ans+" / "+denom+" ";
	}
	
	public boolean isCorrect(int x)
	{
		return x==ans;
	}
}
