package helpers;

import android.graphics.Bitmap;
import android.graphics.Canvas;

public class Location {
	
	private Bitmap icon;
	private float x,y;
	private int index;
	
	public Location(Bitmap icon, int index)
	{
		this.icon = icon;
		this.index = index;
	}
	
	//sets the location based on index, index maps the icon to its text
	public void setLocation(int width, int height)
	{
		float tempx,tempy;
		if(index == 1)
		{
			tempx = 30;
			tempy = (height/2) - icon.getHeight() - 20;
		}
		else if(index == 2)
		{
			tempx = (width/2) - (icon.getWidth()/2);
			tempy = 30 + icon.getHeight()/2;
		}
		else if(index ==3)
		{
			tempx = (float) ((width/2) - (icon.getWidth()*.5));
			tempy = height - icon.getHeight() - 50;
		}
		else
		{
			tempx = (float) (width - (1.5)*(icon.getWidth()));
			tempy = (height/2) - icon.getHeight() - 15;
		}
		x = tempx;
		y=tempy;
	}
	
	public void draw(Canvas canvas)
	{
		canvas.drawBitmap(icon, x, y,null);
	}

}
